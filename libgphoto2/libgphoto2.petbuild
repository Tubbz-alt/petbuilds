# libgphoto2
# Builds from https://github.com/puppylinux-woof-CE/petbuilds

. ../func
. ../build.conf

#VER=2.5.3.1
VER=2.5.10
URL=http://downloads.sourceforge.net/project/gphoto/libgphoto/${VER}
PKG=libgphoto2
COMP=tar.bz2
DESC="libgphoto2 is the core library designed to allow access to digital camera by external programs"
DEPS=+glib2
CAT=BuildingBlock
DESKTOP=libgphoto2.desktop
CWD=$(pwd)
BUILD=
CWD=$(pwd)
[ -z "$MWD" ] && MWD=$(dirname $CWD)	
[ -z "$BUILD" ] && BUILD=$DEF_BUILD
[ -f "$DESKTOP" ] || DESKTOP=not
[ -z "$DEPS" ] && DEPS=not	

ARCH=$(uname -m)
case $ARCH in
 *64) 	LIBDIR=$LIBCONF64 ;;
 arm*)	LIBDIR=$LIBCONFarm;;
 *) 	LIBDIR=$LIBCONF32 ;;
esac

patch_me() {
	for i in *patch;do
		echo "applying $i"
		patch -p0 < $i || exit 1
	done
}

# main
retrieve ${PKG}-${VER}.${COMP}
extract ${PKG}-${VER}.${COMP}
patch_me
build_configure $PKG $VER $LIBDIR
package_std $PKG $VER $ARCH $DESKTOP "$DESC" $DEPS $CAT	
alert $PKG
